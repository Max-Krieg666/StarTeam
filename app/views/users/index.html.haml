.page-header
  %h1 Пользователи

%table.table.table-bordered.table-hover.table-condensed
  %thead
    %tr
      %th.text-center
        .fa.fa-user
        Логин
      %th.text-center
        .fa.fa-users
        Команда
      %th.text-center
        .fa.fa-picture-o
        Аватар
      %th.text-center
        .fa.fa-home
        Страна
      %th.text-center
        .fa.fa-venus-mars
        Пол
      %th.text-center
        .fa.fa-birthday-cake
        Дата рождения
      %th.text-center
        .fa.fa-envelope
        Эл. почта
      -if @current_user.moderator?
        %th.text-center
          .fa.fa-street-view
          Роль
        %th
        %th
      %th

  %tbody
    - @users.each do |user|
      %tr.text-center
        %td= user.login
        %td
          -if user.team
            =link_to user.team.title, user.team, style: "color: #00F"
          -else
            .text-danger.li Не создана!
        %td
          -if user.avatar.blank?
            .text-danger.li Аватар не загружен!
          -else
            = image_tag user.avatar.url(:thumb)
        %td= user.country.title
        %td= user.sex
        %td
          -if user.birthday
            = user.birthday
          -else
            .text-danger.li Не выбрано!
        %td= user.email
        -if @current_user.moderator?
          %td= user.role
          %td
            = link_to edit_user_path(user), class: 'btn btn-link' do
              = fa_icon "edit"
          %td
            = link_to user, method: :delete, data: { confirm: 'Вы уверены?' }, class: 'btn btn-link' do
              = fa_icon "remove"
        %td
          = link_to user, class: 'btn btn-link' do
            = fa_icon "arrow-circle-right"

%br
= paginate @users
