.page-header
  %h1 Пользователи

%table.table.table-bordered.table-hover.table-condensed
  %thead
    %tr
      %th.text-center
        .fa.fa-sort-numeric-asc
        id
      %th.text-center
        .fa.fa-user
        Логин
      %th.text-center
        .fa.fa-users
        Команда
      %th.text-center
        .fa.fa-picture-o
        Аватар
      %th.text-center
        .fa.fa-home
        Страна
      %th.text-center
        .fa.fa-venus-mars
        Пол
      %th.text-center
        .fa.fa-birthday-cake
        Дата рождения
      %th.text-center
        .fa.fa-envelope
        Эл. почта
      -if @current_user.role!=0
        %th.text-center
          .fa.fa-street-view
          Роль
        %th
        %th
      %th

  %tbody
    - @users.each do |user|
      %tr.text-center
        %td= user.id
        %td= user.login
        %td
          -if user.team
            =link_to user.team.title, user.team, style: "color: #00F"
          -else
            .text-danger.li Не создана!
        %td
          -if user.avatar.blank?
            .text-danger.li Аватар не загружен!
          -else
            =image_tag user.avatar.url(:thumb)
        %td
          -if user.country_id
            =Country.find(user.country_id).title
          -else
            .text-danger.li Не выбрана!
        %td= user.sex
        %td
          -if user.birthday
            = user.birthday
          -else
            .text-danger.li Не выбрано!
        %td= user.mail
        -if @current_user.role!=0
          %td= user.role_name
          %td.text-center
            = link_to edit_user_path(user), class: "btn btn-link" do
              =fa_icon "edit"
          %td.text-center
            = link_to user, :method => :delete, :data => { :confirm => 'Вы уверены?' }, class: "btn btn-link" do
              =fa_icon "remove"
        %td.text-center
          = link_to user, class: "btn btn-link" do
            =fa_icon "arrow-circle-right"

%br
-if @current_user.role!=0
  = link_to new_user_path, class: "btn btn-primary" do
    =fa_icon "user-plus"
    Новый пользователь

%br
= paginate @users
