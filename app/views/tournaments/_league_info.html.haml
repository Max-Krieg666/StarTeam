.col-md-3
  .list-group
    %h3.list-group-item.active{style: "color: #00F"}
      = t("leagues.title.#{league.title}")
    .list-group-item{title: "Количество участников"}
      = inline_svg 'group.svg', class: 'svg-picture'
      = league.count
    .list-group-item{title: "Начало"}
      = inline_svg 'timer.svg', class: 'svg-picture'
      = l league.created_at
    .list-group-item{title: "Подать заявку"}
      = inline_svg 'plus-circle.svg', class: 'svg-picture-btn'
      = link_to 'Подать заявку', '#'