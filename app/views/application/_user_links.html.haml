%li.dropdown
  %a.dropdown-toggle{href: "#", "role" => "button", "data-toggle" => "dropdown", "data-target" => "#"} 
    = t('views.teams.block')
    %b.caret
    %ul.dropdown-menu{"role" => "menu"}
      .li= link_to t('views.teams.my_team'), @current_user_team, class: 'btn btn-link other-color-on-hover'
      .li= link_to t('views.teams.squad'), '#', class: 'btn btn-link other-color-on-hover'
      .li= link_to t('views.teams.training'), training_team_path(@current_user_team), class: 'btn btn-link other-color-on-hover'
      .li= link_to t('views.teams.statistics'), statistics_team_path(@current_user_team), class: 'btn btn-link other-color-on-hover'
      .li= link_to t('views.teams.budget_history'), operations_team_path(@current_user_team), class: 'btn btn-link other-color-on-hover'
      .li= link_to t('views.teams.transfer_history'), transfer_history_team_path(@current_user_team), class: 'btn btn-link other-color-on-hover'
      -if @current_user_team.stadium
        .li= link_to t('views.teams.stadium'), [@current_user_team, @current_user_team.stadium], class: 'btn btn-link other-color-on-hover'
      -if @current_user_team.club_base
        .li= link_to t('views.teams.club_base'), [@current_user_team, @current_user_team.club_base], class: 'btn btn-link other-color-on-hover'
