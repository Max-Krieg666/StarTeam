%li.active= link_to t('views.users.my_profile'), @current_user
%li.dropdown
  %a.dropdown-toggle{href: "#", "role" => "button", "data-toggle" => "dropdown", "data-target" => "#"} 
    = t('views.teams.block')
    %b.caret
    %ul.dropdown-menu{"role" => "menu"}
      .li= link_to t('views.teams.my_team'), @current_user_team, class: 'btn btn-link other-color-on-hover'
      .li= link_to t('views.teams.training'), '#', class: 'btn btn-link other-color-on-hover'
      .li= link_to t('views.teams.statistics'), '#', class: 'btn btn-link other-color-on-hover'
      -if @current_user_team.stadium
        .li= link_to t('views.teams.stadium'), @current_user_team.stadium, class: 'btn btn-link other-color-on-hover'
      -if @current_user_team.club_base
        .li= link_to t('views.teams.club_base'), @current_user_team.club_base, class: 'btn btn-link other-color-on-hover'
%li= link_to t('views.countries.all'), countries_path
%li= link_to t('views.players.all'), players_path
%li= link_to t('views.transfers.all'), transfers_path
