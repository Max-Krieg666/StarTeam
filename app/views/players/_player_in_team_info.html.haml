.page-header
  %h1= "Выставить на трансфер игрока #{@player.name}"
.row
  .col-md-3
    %p
      %b= Player.human_attribute_name(:country) + ':'
      = link_to @player.country.i18n_title, @country, class: 'btn btn-link', style: "color: #00688B"
      = image_tag @player.country.flag.url
  .col-md-2
    %p
      %b= Player.human_attribute_name(:position1) + ':'
      = @player.full_position_name
    %p
      %b= Player.human_attribute_name(:talent) + ':'
      = @player.talent
  .col-md-2
    %p
      %b= Player.human_attribute_name(:age) + ':'
      = @player.age
    %p
      %b= Player.human_attribute_name(:skill_level) + ':'
      = @player.skill_level
  .col-md-5
    = render 'players/base_info/career_block'
.row
  .col-md-3
    %p
      %b= Player.human_attribute_name(:price) + ':'
      = number_to_currency(@player.price, locale: :en)
    %p
      %b= Player.human_attribute_name(:quality) + ':'
      -quality = @player.quality
      -quality[0].times do
        = inline_svg 'star.svg', class: 'svg-picture'
      -if quality[1] == 1
        = inline_svg 'star-half.svg', class: 'svg-picture'
      -quality[2].times do
        = inline_svg 'star-o.svg', class: 'svg-picture'
