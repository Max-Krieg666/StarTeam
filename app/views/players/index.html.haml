.page-header
  %h1 Игроки

%table.table.table-bordered.table-hover.table-condensed
  %thead
    %tr
      %th.text-center
        .fa.fa-male
        Игрок
      %th.text-center
        .fa.fa-flag
        Национальность
      %th.text-center
        .fa.fa-bookmark
        Позиция
      %th.text-center
        .fa.fa-level-up
        Талант
      %th.text-center
        .fa.fa-history
        Возраст
      %th.text-center
        .fa.fa-line-chart
        Мастерство
      %th.text-center
        .fa.fa-money
        Цена
      %th.text-center
        .fa.fa-star
        Качество игрока
      %th
      -if @current_user.role!=0
        %th
        %th
      
  %tbody
    - @players.each do |player|
      %tr.text-center
        %td= player.name
        %td
          -c=player.country
          = image_tag c.flag.url, title: "#{c.title}"
        %td
          = player.position1
          -if player.position2!=""
            =player.position2
        %td= player.talent
        %td= player.age
        %td= player.skill_level
        %td= number_to_currency(player.price, locale: :en)
        %td
          =player.level_define/2.0
          -max=5
          -cel,ost=player.level_define/2,player.level_define%2
          -cel.times do
            .fa.fa-star
          -if player.level_define%2!=0
            .fa.fa-star-half-o
          -(max-cel-ost).times do
            .fa.fa-star-o
        -if @current_user.role!=0
          %td
            = link_to edit_player_path(player), class: "btn btn-link" do
              =fa_icon "wrench"
          %td
            = link_to player, :method => :delete, :data => { :confirm => 'Вы уверены?' }, class: "btn btn-link" do
              =fa_icon "trash"
        %td
          = link_to player, class: "btn btn-link" do
            =fa_icon "street-view"
%br

-if @current_user.role!=0
  = link_to new_player_path, class: "btn btn-default" do
    =fa_icon "plus"
    Новый игрок