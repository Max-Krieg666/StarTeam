-team=Team.find(@current_user.team_id)
.page-header
  %h1 Игроки
  -if !team
    .small.text-danger Необходимо создать команду, чтобы приобретение игроков стало доступным
.row
  =form_tag players_path, :method => 'get' do
    .input-group
      .col-lg-6
        = text_field_tag :search, params[:search], class: 'form-control'
        .input-group-btn
          = submit_tag "Искать по имени или позиции", :name => nil, class:'btn btn-default'

%br
%table.table-responsive.table-bordered.table-hover
  %thead
    %tr
      %th.text-center
        .fa.fa-male
        Игрок
      %th.text-center
        .fa.fa-flag
        Национальность
      %th.text-center
        .fa.fa-bookmark
        Позиция
      %th.text-center
        .fa.fa-level-up
        Талант
      %th.text-center
        .fa.fa-history
        Возраст
      %th.text-center
        .fa.fa-line-chart
        Мастерство
      %th.text-center
        .fa.fa-money
        Цена
      %th.text-center
        .fa.fa-star
        Качество игрока
      -#%th
      -#%th
      -#-if @current_user.role!=0
      -#  %th
      -#  %th
      
  %tbody
    - @players.each do |player|
      %tr.text-center
        %td= player.name
        -c=player.country
        %td
          = image_tag c.flag.url, title: "#{c.title}"
        %td{title: player.right_alph_srt(player.position1)}
          -str="#{player.position1}"
          -if !player.position2.blank?
            -str+=" / #{player.position2}"
          =str
        %td= player.talent
        %td= player.age
        %td= player.skill_level
        %td
          -a,count,i="#{player.price}".reverse,0,0
          -while a[i]!='.'
            -count+=1;i+=1
          = number_to_currency(player.price, locale: :en, precision: count)
        %td
          =player.level_define/2.0
          -max=5
          -cel,ost=player.level_define/2,player.level_define%2
          -cel.times do
            .fa.fa-star
          -if player.level_define%2!=0
            .fa.fa-star-half-o
          -(max-cel-ost).times do
            .fa.fa-star-o
        -if @current_user.role!=0
          %td
            = link_to edit_player_path(player), class: "btn btn-link" do
              =fa_icon "wrench"
          %td
            = link_to player, :method => :delete, :data => { :confirm => 'Вы уверены?' }, class: "btn btn-link" do
              =fa_icon "trash"
        %td
          = link_to player, class: "btn btn-link" do
            =fa_icon "street-view"
        %td
          -if team
            = link_to buy_player_player_path(player), class: "btn btn-default", id: 'buy_player' do
              =fa_icon "share-square-o"
              Купить
          -else
            .text-danger Покупка не доступна
%br

-if @current_user.role!=0
  = link_to new_player_path, class: "btn btn-default" do
    =fa_icon "plus"
    Новый игрок

%br
=paginate @players