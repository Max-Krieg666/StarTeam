= form_for @country do |f|
  = error_messages_for(@country)

  .row
    .col-md-3
      .form-group
        = inline_svg_tag 'pencil.svg', class: 'svg-picture'
        = f.label :title
        = f.text_field :title, class: 'form-control'
  %br
  .row
    .col-md-3
      .form-group
        = inline_svg_tag 'picture.svg', class: 'svg-picture'
        = f.label :flag
        = f.file_field :flag
  .actions
    = f.submit t('buttons.save'), class: 'btn btn-primary'
%br
