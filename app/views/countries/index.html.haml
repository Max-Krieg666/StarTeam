.page-header
  %h1 Страны

%table.table.table-bordered.table-hover
  %thead
    %tr
      %th.text-center
        = inline_svg 'pencil.svg', class: 'svg-picture'
        Название
      %th.text-center
        = inline_svg 'flag.svg', class: 'svg-picture'
        Флаг
      %th
      -if @current_user.moderator?
        %th
        %th
      
  %tbody
    - @countries.each do |country|
      %tr.text-center
        %td
          = country.title
        %td
          = image_tag country.flag.url, alt: country.title
        %td
          = link_to country, class: 'btn btn-link' do
            = inline_svg 'chevron-circle-right.svg', class: 'svg-picture-btn'
        -if @current_user.moderator?
          %td
            = link_to edit_country_path(country), class: 'btn btn-link' do
              = inline_svg 'edit.svg', class: 'svg-picture-btn'
          %td
            = link_to country, :method => :delete, :data => {:confirm => 'Вы уверены?'}, class: 'btn btn-link' do
              = inline_svg 'trash.svg', class: 'svg-picture-btn white'

-if @current_user.moderator?
  %br
  = link_to new_country_path, class:'btn btn-default' do
    = inline_svg 'plus-circle.svg', class: 'svg-picture-btn white'
    Создать страну

%br
= paginate @countries
